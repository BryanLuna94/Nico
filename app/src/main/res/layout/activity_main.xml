<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:id="@+id/principal" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2" android:id="@+id/LytImg">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imagen_login"
                android:id="@+id/imgLogin"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:context=".MainActivity"
            android:id="@+id/LytTexto">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">

            <EditText
                    android:layout_width="300dp"
                    android:hint="Teléfono"
                    android:layout_gravity="center"
                    android:layout_height="48dp"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/etUsuario" android:layout_marginTop="50dp"/>
            <EditText
                    android:layout_width="300dp"
                    android:hint="Contraseña"
                    android:layout_gravity="center"
                    android:layout_height="49dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/etClave"/>
            <Button
                    android:text="Iniciar Sesión"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="44dp"
                    android:id="@+id/btnLogin"/>
            <TextView
                    android:text="¿Olvidaste tu contraseña?"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvOlvidaste" android:layout_marginTop="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center">

            <Button
                    android:text="Crear una cuenta"
                    android:layout_width="300dp"
                    android:layout_height="44dp"
                    android:id="@+id/btnCrearUsuario"
                    android:longClickable="true"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
